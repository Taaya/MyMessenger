<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span8">
    <% if @user.microposts.any? %>
        <h3>Microposts (<%= @user.microposts.count %>)</h3>
        <ol class="microposts">
          <%= render @microposts %>
        </ol>

    <% end %>
  </div>
</div>
<style>
  .microposts {
    list-style: none;
    margin: 10px 0 0 0;


  }
  li {
    padding: 10px 0;
    border-top: 1px solid #e8e8e8;
  }
  .content {
    display: block;
  }
  .timestamp {
    color: grey;
  }
  aside {

  }
  textarea {
    height: 100px;
    margin-bottom: 5px;
  }
</style>